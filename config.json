    {
      "name": "AMC 34th Street 14",
      "slug": "amc-34th-street-14",
      "market": "new-york-city"
    }
  ],
  "scraping": {
    "days_ahead": 21,
    "delay_between_requests": 1.5,
    "max_retries": 3,
    "retry_delays": [2, 4, 8],
    "request_timeout": 30,
    "use_parallel": true,
    "max_workers": 8
  },
  "output": {
    "save_raw_responses": true,
    "save_to_json": true,
    "output_dir": "output",
    "logs_dir": "logs"
  },
  "logging": {
    "console_level": "INFO",
    "file_level": "DEBUG",
    "enable_scraper_file_logging": false,
    "enable_pipeline_file_logging": false,
    "enable_status_file_logging": true
  },
  "telegram": {
    "retention_days": 30
  },
  "server": {
    "interval_minutes": 60,
    "cleanup_interval_days": 7
  }
}
