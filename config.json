{
  "theaters": [
    {
      "name": "AMC Empire 25",
      "slug": "amc-empire-25",
      "market": "new-york-city"
    },
    {
      "name": "AMC Lincoln Square 13",
      "slug": "amc-lincoln-square-13",
      "market": "new-york-city"
